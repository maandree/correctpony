echo

(echo $(cat /usr/share/correctpony/* 2>/dev/null | sort | uniq | wc -l) ' ^ 4 / 60 / 60 / 24 / 365.2425 / 1000' | bc) | echo -e "Trying to crack a passphrases generated by this version of correctpony\\nwith auto settings using all wordlists and making 1000 guesses per\\nsecond would take about $(cat /dev/stdin) years."

echo

(echo $(cat /usr/share/correctpony/* 2>/dev/null | sort | uniq | wc -l) ' ^ 4 * 5 / 60 / 60 / 24 / 365.2425' | bc) | echo -e "Trying to crack a passphrases generated by this version of correctpony\\nwith auto settings using all wordlists and making 1 guess every fifth\\nsecond would take about $(cat /dev/stdin) years."

echo

cat /usr/share/correctpony/* 2>/dev/null | sort | uniq | wc -l | echo -e "You have a total of $(cat /dev/stdin) words in all your word lists, the English\\nlanguage contains about 500000 words."

echo

(echo $(cat /usr/share/correctpony/* 2>/dev/null | sort | uniq | wc -l) ' ^ 5 * 11 / 60 / 60 / 24 / 365.2425 / 1000' | bc) | echo -e "If you select at random select any of (-j | -s ' ' | -s . | -s , |\\n-s : | -s ; | -s _ | -s - | -s ! | -s + | -s %) to you correctpony options\\nand use -w 5 it would take about $(cat /dev/stdin) years to crack a passphrasing\\nin the first described manner."

echo
