pkgname=correctpony
pkgver=1.2
pkgrel=1
pkgdesc="Passphrase generator based on http://xkcd.com/936/"
arch=('i686' 'x86_64')
url="https://github.com/maandree/correctpony"
license=('WTFPL')
optdepends=('bc: for using the correctpony-security script' 'coreutils: for using the correctpony-security script')
provides=('correctpony')
conflicts=('correctpony')
source=(https://github.com/maandree/correctpony/tarball/v1.1)
md5sums=(57189fc5f945822f1110570522d289b2)

build() {
  cd maandree-correctpony-3ef1073
  make -B PREFIX=/usr
}

package() {
  cd maandree-correctpony-3ef1073
  make DESTDIR="$pkgdir/" PREFIX=/usr install
}
