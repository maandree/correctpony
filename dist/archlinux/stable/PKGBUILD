pkgname=correctpony
pkgver=1.3
pkgrel=2
pkgdesc="Passphrase generator based on http://xkcd.com/936/"
arch=('i686' 'x86_64')
url="https://github.com/maandree/$pkgname"
license=('WTFPL')
optdepends=('bc: for using the correctpony-security script')
provides=('correctpony')
conflicts=('correctpony')
source=($url/tarball/v$pkgver)
md5sums=(8b1300258a231d1fe5e319cfbddc7711)

build() {
  cd maandree-${pkgname}-*
  make -B
}

package() {
  cd maandree-${pkgname}-*
  make DESTDIR="$pkgdir/" install
}
